{
    "compilerOptions": {
      "outDir": "dist",
      "target": "ES2020",
      "module": "commonjs",
      "lib": [
        "ES2020",
        "DOM",
        "DOM.Iterable",
        "ES2021"
      ],
      "sourceMap": true,
      "rootDirs": ["src", "media"],
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "exactOptionalPropertyTypes": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@ui/*": ["src/ui/*"],
        "@services/*": ["src/services/*"],
        "@utils/*": ["src/utils/*"],
        "@webview/*": ["src/webview/*"],
        "@config/*": ["src/config/*"],
        "@error/*": ["src/error/*"],
        "@types": ["src/types"],
        "@commands/*": ["src/commands/*"],
        "@visualization/*": ["src/visualization/*"],
        "@status/*": ["src/status/*"],
        "@sync/*": ["src/sync/*"],
        "@media/*": ["media/*"]
      }
    },
    "exclude": ["node_modules", ".vscode-test"],
    "include": [
      "src/**/*",
      "media/scripts/**/*"
    ]
  }